pipeline {
    agent any
    
    environment {
        DOCKER_CREDENTIALS = credentials('docker-hub-credentials-id')
        DOCKER_IMAGE = 'madhusnv/django'
        DOCKERFILE_PATH = 'Dockerfile'
    }

    stages {
        stage('Build Docker Image') {
            steps {
                script {
                    docker.build(DOCKER_IMAGE, "-f ${DOCKERFILE_PATH} .")
                }
            }
        }
    }
}
